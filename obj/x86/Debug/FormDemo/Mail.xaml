<Page
    x:Class="BTVN.FormDemo.Mail"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BTVN.FormDemo"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition  Width="1*"/>
        </Grid.ColumnDefinitions>

        <Frame x:ConnectionId='2' x:Name="MainFarm">
            <StackPanel  Grid.Column="0" Margin="0,100,0,0">
                <TextBox x:ConnectionId='6' x:Name="inputEmail"  Margin="20" HorizontalAlignment="Center" Width="300" Height="50" Text="" TextWrapping="Wrap" PlaceholderText="email"/>
                <TextBox x:ConnectionId='7' x:Name="inputContentEmail" Margin="20" HorizontalAlignment="Center" Width="300" Height="50" Text="" TextWrapping="Wrap" PlaceholderText="Customer"/>
                <TextBox x:ConnectionId='8' x:Name="inputContent" Margin="20" HorizontalAlignment="Center" Width="300" Height="200" Text="" TextWrapping="Wrap" PlaceholderText="Contact"/>
                <Button x:ConnectionId='9'                      Background="Blue" HorizontalAlignment="Center" Content="Button" Width="150"/>
                <Button x:ConnectionId='10' Margin="0,20,0,0"                     Background="Violet" HorizontalAlignment="Center" Content="Back" Width="150"/>
            </StackPanel>
        </Frame>



        <StackPanel Grid.Column="1" Margin="0,100,0,0">
            <TextBlock x:ConnectionId='3' x:Name="txtEmail" Text="Email" FontSize="30" Margin="150,30,10,0" TextWrapping="Wrap"/>
            <TextBlock x:ConnectionId='4' x:Name="txtContentEmail" Text="Customer" FontSize="30" Margin="150,30,10,0" TextWrapping="Wrap"/>
            <TextBlock x:ConnectionId='5' x:Name="txtContent" Text="Contact" FontSize="30" Margin="150,30,10,0" TextWrapping="Wrap"/>

        </StackPanel>
    </Grid>
</Page>

